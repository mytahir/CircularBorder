<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.ScrollableControl">
    <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="Transparent"
                    HeightRequest="100" WidthRequest="100">
        <!-- Central Button -->
        <Button x:Name="centerButton" 
             Text="+" FontSize="32"
             BackgroundColor="Orange"
             WidthRequest="80"
             HeightRequest="80"
             CornerRadius="40"
             Clicked="OnCenterButtonClicked">
            <Button.Shadow>
                <Shadow Brush="Orange"
                     Offset="-30,40"
                     Radius="60"
                     Opacity="0.7" />
            </Button.Shadow>
        </Button>
    </AbsoluteLayout>
</ContentView>
